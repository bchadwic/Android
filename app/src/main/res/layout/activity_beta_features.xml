<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.duckduckgo.app.beta.BetaFeaturesActivity">

    <include layout="@layout/include_toolbar" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="4sp"
        android:padding="16dp"
        android:text="@string/betaFeaturesDescription"
        android:textColor="?attr/settingsMinorTextColor"
        android:textSize="14sp"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/deviceShieldTitle"
        style="@style/SettingsSectionTitle"
        android:text="@string/deviceShield"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.duckduckgo.app.settings.SettingsOptionWithSubtitle
        android:id="@+id/deviceShieldEnable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="@string/betaFeaturesEnableDeviceShield"
        app:subtitle="@string/deviceShieldBlockTrackers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldTitle" />

    <com.duckduckgo.app.settings.SettingsToggleOptionWithSubtitle
        android:id="@+id/deviceShieldToggle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:toggleTitle="@string/deviceShield"
        app:toggleSubTitle="@string/deviceShieldBlockTrackers"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldTitle" />

    <com.duckduckgo.app.settings.SettingsOptionWithSubtitle
        android:id="@+id/deviceShieldPrivacyReportText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldToggle"
        app:subtitle="@string/deviceShieldPrivacyReportSubtitle"
        app:title="@string/deviceShieldPrivacyReport" />

    <com.duckduckgo.app.settings.SettingsOptionWithSubtitle
        android:id="@+id/deviceShieldExcludedAppsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/deviceShieldPrivacyReportText"
        app:subtitle="TODO"
        app:title="@string/deviceShieldExcludedApps" />

</LinearLayout>