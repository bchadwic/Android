<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.duckduckgo.mobile.android.vpn">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application>

        <activity
            android:name=".ui.report.PrivacyReportActivity"
            android:label="@string/privacyReportToolbarTitle"
            android:theme="@style/Theme.AndroidVpn"
            android:parentActivityName="com.duckduckgo.app.browser.BrowserActivity" />

        <activity
            android:name="dummy.ui.VpnControllerActivity"
            android:exported="true"
            android:label="@string/title_activity_vpn_controller"
            android:process=":vpn"
            android:parentActivityName=".ui.report.PrivacyReportActivity"
            android:theme="@style/Theme.AndroidVpn.NoActionBar">
        </activity>

        <activity
            android:name="dummy.ui.VpnDiagnosticsActivity"
            android:theme="@style/Theme.AndroidVpn.NoActionBar"
            android:parentActivityName=".ui.report.PrivacyReportActivity"
            android:process=":vpn" >
        </activity>

        <activity android:name=".service.VpnPermissionRequesterActivity" />

        <activity
            android:name=".onboarding.DeviceShieldOnboardingActivity"
            android:theme="@style/Theme.AndroidVpn"
            android:label="@string/privacyReportDeviceShieldEnableLabel"
            />

        <service
            android:name=".service.TrackerBlockingVpnService"
            android:permission="android.permission.BIND_VPN_SERVICE"
            android:process=":vpn">
            <intent-filter>
                <action android:name="android.net.VpnService" />
            </intent-filter>
        </service>

        <service
            android:name=".service.DeviceShieldTileService"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:label="@string/device_shield_tile_label"
            android:icon="@drawable/ic_device_shield_tile"
            >
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE"/>
            </intent-filter>
        </service>

        <receiver
            android:name=".service.VpnReminderReceiver"
            android:enabled="false"
            android:process=":vpn">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.duckduckgo.vpn.internaltesters.reminder" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".heartbeat.VpnServiceHeartbeatReceiver"
            >
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="com.duckduckgo.mobile.android.vpn.heartbeat" />
            </intent-filter>
        </receiver>

    </application>

</manifest>