<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:paddingBottom="24dp"
    android:background="@color/white"
    tools:context="com.duckduckgo.mobile.android.vpn.ui.onboarding.DeviceShieldOnboardingActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:scaleType="centerCrop"
            android:contentDescription="@string/deviceShieldOnboardingLogoDescription"
            android:src="@drawable/tracking_profile_info_header" />

        <TextView
            android:id="@+id/trackerProfilingInfoHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="6sp"
            android:text="@string/trackerProfilingInfoTitle"
            android:textAlignment="viewStart"
            android:textColor="@color/newBlack"
            android:textSize="20sp"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/trackerProfilingInfoFirstContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="sans-serif"
            android:textAlignment="viewStart"
            android:lineSpacingExtra="6sp"
            android:text="@string/trackerProfilingInfoFirstParagraph"
            android:textColor="@color/brownishGrayTwo"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="203dp"
            android:layout_gravity="center"
            android:contentDescription="@string/deviceShieldOnboardingLogoDescription"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            android:src="@drawable/tracking_profile_info_graph" />

        <TextView
            android:id="@+id/trackerProfilingInfoSecondContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/trackerProfilingInfoSecondParagraph"
            android:textAlignment="viewStart"
            android:textColor="@color/brownishGrayTwo"
            android:textSize="14sp"
            android:textStyle="normal"
            android:paddingStart="35dp"
            android:paddingEnd="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView" />

    </LinearLayout>
</ScrollView>
