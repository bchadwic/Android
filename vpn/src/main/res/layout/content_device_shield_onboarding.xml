<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fadeScrollbars="false"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.duckduckgo.mobile.android.vpn.onboarding.DeviceShieldOnboardingActivity"
    tools:showIn="@layout/activity_device_shield_onboarding"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:orientation="vertical"
        android:paddingBottom="32dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/deviceShieldOnboardingLogoDescription"
            android:src="@drawable/device_shield_onboarding_illustration"
            />

        <!-- TODO aitor - Color #222222 to ?attr/normalTextColor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif"
            android:lineSpacingExtra="6sp"
            android:text="@string/deviceShieldOnboardingTitle"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="20sp"
            android:textStyle="bold" />

        <!-- TODO aitor - Color #222222 to ?attr/normalTextColor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-black"
            android:lineSpacingExtra="6sp"
            android:text="@string/deviceShieldOnboardingSubtitle"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <!-- TODO aitor - Color #222222 to ?attr/normalTextColor -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="sans-serif-medium"
            android:lineSpacingExtra="6sp"
            android:text="@string/deviceShieldOnboardingDescription"
            android:textAlignment="center"
            android:textColor="#222222"
            android:textSize="16sp"
            android:textStyle="normal"
            />

        <Button
            android:id="@+id/askVpnPermissionButton"
            style="@style/DeviceShield.OnboardingButtonPrimaryRoundedCta"
            android:layout_marginTop="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/deviceShieldOnboardingCta"
            />


    </LinearLayout>

</ScrollView>