<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/privacyReportTrackerCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/network_logo_google_llc" />

    <TextView
        android:id="@+id/privacyReportTrackerEntry"
        style="@style/DeviceShield.PrivacyReport.TrackerEntry.Company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/privacyReportTrackerCompany"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Amazon" />

    <TextView
        android:id="@+id/privacyReportTrackerTimeAgo"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/privacyReportTrackerCompany"
        app:layout_constraintTop_toBottomOf="@+id/privacyReportTrackerEntry"
        tools:text="2m ago" />

    <TextView
        android:id="@+id/privacyReportTrackerCompanyBlockedLabel"
        style="@style/DeviceShield.PrivacyReport.TrackerEntry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="@string/privacyReportCompanyBlocked"
        app:layout_constraintStart_toEndOf="@+id/privacyReportTrackerEntry"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/privacyReportTrackerCompanyBlockedTimesLabel"
        style="@style/DeviceShield.PrivacyReport.TrackerEntry.Company"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/privacyReportTrackerCompanyBlockedLabel"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>