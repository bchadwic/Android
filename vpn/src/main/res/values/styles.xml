<resources>
    <style name="DeviceShield"/>
    <style name="DeviceShield.PrivacyReport"/>
    <style name="DeviceShield.PrivacyReport.Title">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/almostBlackDark</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DeviceShield.PrivacyReport.Label">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/almostBlackDark</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DeviceShield.PrivacyReport.Label.Tooltip">
        <item name="android:background">@drawable/background_green_tooltip</item>
    </style>
    <style name="DeviceShield.PrivacyReport.Toggle">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/warmBlue</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="DeviceShield.PrivacyReport.TrackerEntry">
        <item name="android:textColor">@color/almostBlackDark</item>
        <item name="android:textSize">14sp</item>
    </style>
    <style name="DeviceShield.PrivacyReport.TrackerEntry.Company">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="DeviceShield.PrivacyReport.TrackerEntry.Time">
        <item name="android:textColor">@color/paleBrownishGray</item>
    </style>

    <!--  TODO aitor - Once we extract the themes to its own gradle module, this will go  -->
    <style name="DeviceShield.OnboardingButtonPrimaryRoundedCta" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="layout_constraintWidth_max">400dp</item>
        <item name="layout_constraintWidth_percent">0.8</item>
        <item name="android:background">@drawable/onboarding_primary_cta_button_rounded_bg</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>